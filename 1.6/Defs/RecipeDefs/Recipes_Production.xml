<Defs>
  <RecipeDef> <!-- MakeChemfuelFromOil -->
    <defName>MakeChemfuelFromOil</defName>
    <label>make chemfuel from oil</label>
    <description>Make a batch of chemfuel by extracting oil from shale.</description>
    <jobString>Refining chemfuel from shale.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>400</workAmount>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OilBarrel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OilBarrel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Chemfuel>25</Chemfuel>
    </products>
    <recipeUsers>
  	  <li>BiofuelRefinery</li>
  	</recipeUsers>
  </RecipeDef>
